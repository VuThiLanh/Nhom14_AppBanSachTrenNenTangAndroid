<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ThongTinShopActivity"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.4"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="THÔNG TIN SHOP"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Tên shop: muasachonline"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Điện thoại: 08 6240 6951"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Email: muasachonline@gmail.com"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="Nhà sách muasachonline là nhà sách thứ 3 vừa mới được khai trương tháng 6/2017 sau sự thành công của hai nhà sách muasachonline đang 'làm mưa làm gió' trong Sài Gòn. Với diện tích lên đến 1300m2, nhà sách được chia làm 5 tầng với mỗi tầng là một không gian diện tích khác nhau."
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Địa chỉ: 115 Nguyễn Thái Học, Ba Đình, Hà Nội"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"/>
</LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="0dp"
    android:layout_weight="0.6"
    android:layout_margin="10dp">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.ThongTinShopActivity" />
</RelativeLayout>
</LinearLayout>

