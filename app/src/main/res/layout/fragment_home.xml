<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.fragment.HomeFragment">
    <FrameLayout
        android:background="@color/maunen"
        android:id="@+id/fragmentMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativelayout"
            android:layout_marginBottom="10dp">

            <ViewFlipper
                android:id="@+id/anhquangcao"
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:layout_below="@+id/appbarlayout_main"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:background="@color/purple_200"
                android:src="@drawable/anhnen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/appbarlayout_main"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="15"
                            android:layout_height="match_parent">
                            <AutoCompleteTextView
                                android:layout_marginLeft="10dp"
                                android:id="@+id/editTextSearch"
                                android:layout_width="0dp"
                                android:layout_weight="10"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_timkiem"
                                android:drawablePadding="8dp"
                                android:paddingLeft="5dp"
                                android:gravity="center"
                                android:hint="@string/timkiem"
                                app:layout_constraintStart_toStartOf="parent"/>
                            <ImageView
                                android:background="@drawable/bg_nuttk"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_search_white"
                                android:layout_weight="2"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/img_gioHang"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_giohanghome" />
                    </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:backgroundTint="@color/purple_200"
            android:id="@+id/ln_topbanchay"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_below="@id/relativelayout">
            <TextView
                android:id="@+id/tv_topbanchay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/banchay"
                android:textColor="@color/mauchu"
                android:textStyle="bold"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcTopBanChay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/blue"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/ln_danhmuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_below="@id/ln_topbanchay">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/danhmuc"
                android:textColor="@color/mauchu"
                android:textStyle="bold"
                android:textSize="20sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_ChinhTri_PhapLuat"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/pl"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:text="@string/chinhtri"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_KhoaHoc_CN_KT"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:src="@drawable/khoahoccnkt" />
                        <TextView
                            android:text="@string/khcnkt"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_VanHoc_NT"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/vanhocnt"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:gravity="center"
                            android:text="@string/vhnt"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_VanHoa_XH_LS"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/vanhoaxhls"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:text="@string/vhxhls"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_GiaoTrinh"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/giaotrinh"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:text="@string/giaotrinh"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_Truyen_TieuThuyet"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/truyentieuthiuyet"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:text="@string/ttt"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_TamLy_TamLinh"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/tamlytamlinh"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:gravity="center"
                            android:text="@string/tamly"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_ThieuNhi"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/thieunhi"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:text="@string/thieunhi"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_goiy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln_danhmuc"
            android:layout_marginTop="12dp"
            android:background="@color/purple_200"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goiy"
                android:textColor="@color/mauchu"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcGoiY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/blue"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
</FrameLayout>
</layout>
