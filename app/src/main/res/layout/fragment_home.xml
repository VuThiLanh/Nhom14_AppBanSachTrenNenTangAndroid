<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.fragment.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativelayout"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_anhSlide"
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:scaleType="fitXY"
                android:layout_below="@+id/appbarlayout_main"
                android:src="@drawable/anhnen" />
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/appbarlayout_main"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:id="@+id/editTextSearch"
                            android:layout_width="0dp"
                            android:layout_weight="9"
                            android:layout_height="40dp"
                            android:background="@drawable/search_bg"
                            android:drawableLeft="@drawable/ic_search_black_24dp"
                            android:drawablePadding="8dp"
                            android:ems="10"
                            android:paddingLeft="5dp"
                            android:gravity="center"
                            android:hint="Tìm kiếm sách trong musachonline"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <ImageView
                            android:id="@+id/img_gioHang"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="20dp"
                            android:src="@drawable/icon_giohanghome" />
                    </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/ln_topbanchay"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_below="@id/relativelayout">
            <TextView
                android:id="@+id/tv_topbanchay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/banchay"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcTopBanChay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/blue"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_danhmuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_below="@id/ln_topbanchay">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/danhmuc"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/pl"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:text="@string/chinhtri"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/khoahoccnkt"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:text="@string/khcnkt"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/vanhocnt"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:gravity="center"
                            android:text="@string/vhnt"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/vanhoaxhls"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:text="@string/vhxhls"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/giaotrinh"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:text="@string/giaotrinh"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/truyentieuthiuyet"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:text="@string/ttt"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/tamlytamlinh"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:gravity="center"
                            android:text="@string/tamly"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:src="@drawable/thieunhi"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <TextView
                            android:text="@string/thieunhi"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/ln_goiy"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_below="@id/ln_danhmuc">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goiy"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/blue"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>
