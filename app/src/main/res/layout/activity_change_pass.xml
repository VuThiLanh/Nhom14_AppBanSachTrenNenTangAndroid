<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.ChangePassActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guide01"
            android:background="@color/maunen"
            android:id="@+id/appbarlayout_login">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar_login"
                app:titleTextColor="@color/white"
                app:navigationIcon="@drawable/ic_baseline_keyboard_backspace_24"
                />
        </com.google.android.material.appbar.AppBarLayout>
        <TextView
            android:id="@+id/login_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Cập nhật mật khẩu "
            android:textColor="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guide01"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/doc1"
            app:layout_constraintEnd_toEndOf="@id/doc2"
            app:layout_constraintTop_toTopOf="@id/guide02"
            app:layout_constraintBottom_toBottomOf="@id/guide03"
            android:gravity="center"
            android:text="admin@gmail.com"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <EditText
            android:layout_margin="15dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/item_boder_bgwhite"
            android:hint="@string/mkcu"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="@id/doc1"
            app:layout_constraintEnd_toEndOf="@id/doc2"
            app:layout_constraintTop_toTopOf="@id/guide03"
            app:layout_constraintBottom_toBottomOf="@id/guide04"
            android:textColor="@color/black" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:background="@drawable/item_boder_bgwhite"
            android:hint="@string/mkmoi"
            android:imeOptions="actionDone"
            app:layout_constraintStart_toStartOf="@id/doc1"
            app:layout_constraintEnd_toEndOf="@id/doc2"
            app:layout_constraintTop_toTopOf="@id/guide04"
            app:layout_constraintBottom_toBottomOf="@id/guide05"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="@color/black" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:background="@drawable/item_boder_bgwhite"
            android:hint="@string/nhaclaiMK"
            android:imeOptions="actionDone"
            android:inputType="textPhonetic"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="@id/doc1"
            app:layout_constraintEnd_toEndOf="@id/doc2"
            app:layout_constraintTop_toTopOf="@id/guide05"
            app:layout_constraintBottom_toBottomOf="@id/guide06"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnCapNhat"
            android:layout_margin="5dp"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:text="Cập nhật"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="@id/doc1"
            app:layout_constraintEnd_toEndOf="@id/doc2"
            app:layout_constraintTop_toTopOf="@id/guide06"
            app:layout_constraintBottom_toBottomOf="@id/guide07"
            android:background="@drawable/border_login"
            android:textColor="#fff"
            android:textSize="18sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_update_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/login_title"
            android:layout_centerHorizontal="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/guide01"
            app:layout_constraintBottom_toBottomOf="@id/guide02"
            android:elevation="4dp"
            android:src="@drawable/avatardefault" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/doc1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/doc2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.07" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.21" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.29" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide04"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.37" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide05"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide06"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.53" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide07"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.61" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide08"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.69" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide09"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.77" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>